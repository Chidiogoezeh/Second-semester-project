{
	"info": {
		"name": "Blogging API",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Auth",
			"item": [
				{
					"name": "Signup",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"first_name\": \"John\",\n    \"last_name\": \"Doe\",\n    \"email\": \"john@example.com\",\n    \"password\": \"password123\"\n}",
							"options": { "raw": { "language": "json" } }
						},
						"url": { "raw": "http://localhost:3000/auth/signup", "host": ["localhost"], "port": "3000", "path": ["auth", "signup"] }
					}
				},
				{
					"name": "Login",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"john@example.com\",\n    \"password\": \"password123\"\n}",
							"options": { "raw": { "language": "json" } }
						},
						"url": { "raw": "http://localhost:3000/auth/login", "host": ["localhost"], "port": "3000", "path": ["auth", "login"] }
					}
				}
			]
		},
		{
			"name": "Blogs",
			"item": [
				{
					"name": "Get All Published (Paginated)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "http://localhost:3000/blogs?page=1&limit=20&orderBy=read_count",
							"host": ["localhost"],
							"port": "3000",
							"path": ["blogs"],
							"query": [
								{ "key": "page", "value": "1" },
								{ "key": "limit", "value": "20" },
								{ "key": "orderBy", "value": "read_count" },
								{ "key": "title", "value": "", "disabled": true },
								{ "key": "tags", "value": "tech", "disabled": true }
							]
						}
					}
				},
				{
					"name": "Create Blog",
					"request": {
						"method": "POST",
						"header": [
							{ "key": "Authorization", "value": "Bearer {{YOUR_JWT_HERE}}", "type": "text" }
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"title\": \"New Adventure\",\n    \"description\": \"A story about code\",\n    \"tags\": [\"node\", \"express\"],\n    \"body\": \"This is the main content.\"\n}",
							"options": { "raw": { "language": "json" } }
						},
						"url": { "raw": "http://localhost:3000/blogs", "host": ["localhost"], "port": "3000", "path": ["blogs"] }
					}
				}
			]
		}
	]
}